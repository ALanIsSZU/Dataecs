<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/title_layout"
        layout="@layout/title_layout" />

    <RelativeLayout
        android:id="@+id/content_relate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/useName"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/name_shenq"
            android:drawablePadding="12dp"
            android:hint="请输入淘宝账号"
            android:maxLines="1"
            android:textColor="@color/text_default_d"
            android:textColorHint="@color/text_default_l"
            android:textSize="14sp" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="55dp"
            android:layout_below="@+id/useName"
            android:layout_marginTop="5dp"
            android:background="#F2F2F2" />

        <EditText
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/line"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/password_icon_new"
            android:drawablePadding="12dp"
            android:hint="请输入密码"
            android:inputType="numberPassword"
            android:maxLines="1"
            android:textColor="@color/text_default_d"
            android:textColorHint="@color/text_default_l"
            android:textSize="14sp" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="55dp"
            android:layout_below="@+id/password"
            android:layout_marginTop="5dp"
            android:background="#F2F2F2" />

        <LinearLayout
            android:id="@+id/yan_zhen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/verification_code"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_below="@+id/phone"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:drawablePadding="12dp"
                android:hint="请输入图片验证码"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/text_default_d"
                android:textColorHint="@color/text_default_l"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/yan_zhen_img"
                android:src="@drawable/yan_zheng_img"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <!--手机验证码-->
        <EditText
            android:id="@+id/phone_yan_zhen"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/password_icon_new"
            android:drawablePadding="12dp"
            android:hint="请输入手机验证码"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/text_default_d"
            android:textColorHint="@color/text_default_l"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_relate"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_background"
        android:gravity="center"
        android:padding="5dp"
        android:text="提交"
        android:textColor="#fff"
        android:textSize="15dp" />

    <include
        android:id="@+id/shen_he_layout"
        android:visibility="gone"
        android:layout_below="@+id/title_layout"
        android:layout_centerInParent="true"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        layout="@layout/shen_qing_other"/>

</RelativeLayout>