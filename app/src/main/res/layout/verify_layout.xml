<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title_layout"
        layout="@layout/title_layout" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/person_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/verify_person_background"
                    android:padding="10dp"
                    android:src="@drawable/proson_info" />

                <TextView
                    android:id="@+id/content_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/logo"
                    android:text="个人信息"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/content_txt"
                    android:layout_toRightOf="@+id/content_txt"
                    android:text="(必填)"
                    android:textColor="#95C0FA"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/logo"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/logo"
                    android:text="请完善您的个人信息"
                    android:textColor="#999"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/jiantou1" />

                <TextView
                    android:id="@+id/proson_info_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:text="未完善"
                    android:textColor="#999" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/logo"
                    android:layout_marginTop="10dp"
                    android:background="#F2F2F2" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/jin_ji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/logo1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/verify_jinji"
                    android:padding="10dp"
                    android:src="@drawable/jinjilanxi" />

                <TextView
                    android:id="@+id/content_txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/logo1"
                    android:text="紧急联系人"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/content_txt1"
                    android:layout_toRightOf="@+id/content_txt1"
                    android:text="(必填)"
                    android:textColor="#95C0FA"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/logo1"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/logo1"
                    android:text="特殊情况下，可以帮助我们联系您"
                    android:textColor="#999"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/right1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/jiantou1" />

                <TextView
                    android:id="@+id/jin_ji_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:text="未完善"
                    android:textColor="#999" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/logo1"
                    android:layout_marginTop="10dp"
                    android:background="#F2F2F2" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/phone_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/logo2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
