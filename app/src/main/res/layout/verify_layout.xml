            <RelativeLayout
                android:id="@+id/tao_bao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/logo7"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/verify_tao_bao_background"
                    android:padding="10dp"
                    android:src="@drawable/tao_bao" />

                <TextView
                    android:id="@+id/content_txt7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/logo7"
