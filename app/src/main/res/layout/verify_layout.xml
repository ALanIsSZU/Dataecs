                    android:textColor="#000"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/content_txt5"
                    android:layout_toRightOf="@+id/content_txt5"
                    android:text="(必填)"
                    android:textColor="#95C0FA"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/logo5"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/logo5"
                    android:text="请完善个人工作信息"
                    android:textColor="#999"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/right5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/jiantou1" />

                <TextView
                    android:id="@+id/work_info_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:text="未完善"
                    android:textColor="#999" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/logo5"
                    android:layout_marginTop="10dp"
                    android:background="#F2F2F2" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/zhi_fu_bao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/logo6"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/verify_zhi_fu_bao"
                    android:padding="10dp"
                    android:src="@drawable/zhi_fu_bao" />

                <TextView
                    android:id="@+id/content_txt6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/logo6"
                    android:text="支付宝认证"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/content_txt6"
                    android:layout_toRightOf="@+id/content_txt6"
                    android:text="(必填)"
