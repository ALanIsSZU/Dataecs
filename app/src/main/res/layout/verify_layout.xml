                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/logo6"
                    android:text="输入支付宝账号密码有助于通过"
                    android:textColor="#999"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/right6"
                    android:layout_width="20dp"
