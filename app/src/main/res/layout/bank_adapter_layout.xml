<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageView
                android:id="@+id/banck_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@drawable/bank_icon"/>

            <TextView
                android:id="@+id/bank_name"
                android:layout_toRightOf="@+id/banck_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#333333"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/bank_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bank_name"
                android:layout_toRightOf="@+id/banck_icon"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:layout_marginTop="5sp"
                android:textColor="#999999"/>

            <TextView
                android:id="@+id/bank_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bank_type"
                android:layout_toRightOf="@+id/banck_icon"
                android:layout_marginTop="30dp"
                android:textSize="19sp"
                android:textColor="#333333"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>